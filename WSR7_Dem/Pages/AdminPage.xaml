<Page x:Class="WSR7_Dem.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSR7_Dem.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Страница администратора">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="AddButton" Margin="5" Content="Добавить товар" Width="130" Height="30" FontFamily="Comic Sans MS" Background="#FF4A8C51" Click="AddButton_Click"/>
            <Button x:Name="EditButton" Margin="5" Content="Редактировать товар" Width="130" Height="30" FontFamily="Comic Sans MS" Background="#FF4A8C51"/>
            <Button x:Name="DeleteButton" Margin="5" Content="Удалить товар" Width="130" Height="30" FontFamily="Comic Sans MS" Background="#FF4A8C51" Click="DeleteButton_Click"/>
        </StackPanel>
        <TextBlock x:Name="UserRole" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Comic Sans MS" Background="#FF4A8C51"/>
    </Grid>
</Page>
